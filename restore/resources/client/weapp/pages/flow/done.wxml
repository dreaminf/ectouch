<view class="container">

  <!--header-->
  <view class="done-header">
    <view class="money-icon">￥</view>
    <text class="f-26 t-c col-7">付款金额</text>
    <text class="f-34 col-m t-c">{{order.order_amount}}</text>
    <text class="f-24 t-c col-7">测试版本，实付金额为0.1元，商品不发货</text>

  </view>

  <!--list-->
  <view class="padding-box b-f">
    <view class="dis-flex done-list">
      <text class="flex-five done-list-left col-7">{{order.order_sn}}</text>
      <text class="flex-five done-list-right">{{order.shipping_name}}</text>
    </view>
  </view>
  <view class="padding-box m-top10 ">
    <button type="primary" size="{{primarySize}}" data-id='{{order.order_id}}' loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="primary"> 微信支付 </button>
    <button type="default" class="m-top10" size="{{defaultSize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="orderDetail" data-index="{{index}}" hover-class="other-button-hover"> 去用户中心 </button>
  </view>
</view>
<loading hidden="{{hidden}}">加载中…</loading>