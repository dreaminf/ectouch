<header class="dis-box header-menu b-color color-whie"><a class="" href="javascript:history.go(-1)"><i class="iconfont icon-jiantou"></i></a>
	<h3 class="box-flex">消息中心</h3>
	<p><i class="iconfont icon-pailie j-nav-box"></i></p>
</header>
<div class="j-nav-content">
	<ul class="dis-box new-footer-box">
		<li class="box-flex">
			<a href="{:url('index/index')}"><i class="iconfont icon-home"></i><span>首页</span></a>
		</li>
		<li class="box-flex">
			<a href="{:url('category/top_all')}"><i class="iconfont icon-caidan"></i><span>分类</span></a>
		</li>
		<li class="box-flex"><a href="javascript:;" class="j-search-input-new"><i class="iconfont icon-sousuo"></i><span>搜索</span></a></li>
		<li class="box-flex"><a href="{:url('flow/cart')}"><i class="iconfont icon-gouwuche"></i><span>购物车</span></a></li>
		<li class="box-flex"><a href="{:url('user/index')}"><i class="iconfont icon-geren"></i><span>用户中心</span></a></li>
	</ul>
</div>
{if $message_list}
    <div class="user-account-detail" >
      <ul>
        <!--{foreach name=message_list from=$message_list item=msg}-->
        <li class="single_item">       
        	<div class="dis-box new-msg-title">
        		<div class="box-flex">
        			<h4>{$msg.msg_type}:</h4>
        			<span>{$msg.msg_time}</span>
        		</div>
        		<div class="box-flex">
        			<label><a onclick="if (!confirm('{$lang.confirm_remove_msg}')) return false;" href="{$msg.url}">{$lang.drop}</a></label>
        		</div>
            </div>
            <h5> {$msg.msg_title}</h5>
            <p> {$msg.msg_content} </p>
            <!--{if $msg.re_msg_content}-->
            <table>
              <tr>
                <td> {$lang.shopman_reply}({$msg.re_msg_time})<br/>
                  {$msg.re_msg_content} </td>
              </tr>
            </table>
            <!--{/if}-->
        </li>
        <!--{/foreach}-->
      </ul>
    </div>
{include file='library/page.lbi'}

{else}
<div class="user-account-detail" >
	<div class="user-account-message">
		目前还没有消息
	</div>
  <ul class="ect-bg-colorf" id="J_ItemList">
    
    <a href="javascript:;" style="text-align:center" class="get_more"></a>
  </ul>
</div>
{/if}

</div>
