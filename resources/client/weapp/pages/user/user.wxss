.user-header .header-bg {
  width: 100%;
  height: 300rpx;
  background: #fff;
  display: block;
}

.user-header .user-box {
  position: absolute;
  top: 50rpx;
  width: 100%;
}

.user-header .header-img-box {
  width: 140rpx;
  height: 140rpx;
  border: 2px solid #fff;
  margin: 0rpx auto 0;
  border-radius: 100%;
  overflow: hidden;
}

.user-header .header-img-box image {
  width: 100%;
  height: 100%;
  margin: 0;
}

.user-admin {
  font-size: 32rpx;
  color: #fff;
  text-align: center;
  display: block;
  margin: 10rpx 0;
}

.user-order {
  background: #fff;
}

.user-order-title {
  border-bottom: 1px solid #f6f6f9;
  padding: 15rpx 0;
  position: relative;
}

.user-orderIcon {
  width: 48rpx;
  height: 48rpx;
  padding-left: 15rpx;
  margin-top: 15rpx;
}

.user-orderName {
  color: #000;
  line-height: 50rpx;
  position: absolute;
  left: 68rpx;
  top: 28rpx;
}

.user-orderJtou {
  width: 26rpx;
  height: 26rpx;
}



.user-orderContBox {
  float: right;
  padding: 15rpx;
}

.user-order-cont {
  padding: 25rpx 0;
}

.user-order-cont .orderListIcon {
  width: 56rpx;
  height: 56rpx;
  margin: 0 auto;
  display: block;
}

.user-order-cont .listCont {
  display: block;
  text-align: center;
  margin-top: 5rpx;
}

.user-list {
  padding: 50rpx 0 30rpx 0;
}

/*推荐列表*/

.user-left {
  flex: 2;
  padding-left: 15px;
}

.user-left image {
  width: 180rpx;
  height: 180rpx;
  border: 1px solid #efeff4;
}

.user-right {
  flex: 5;
  padding: 0 15px 0 10px;
}

.user-right .price {
  padding-top: 20rpx;
  display: block;
}

.index-goods-list {
  border-bottom: 1px solid #efeff4;
  padding: 10px 0;
}

.index-list {
  padding: 5px 0 0 0;
}
