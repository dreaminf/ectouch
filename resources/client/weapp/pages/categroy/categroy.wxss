page {
  height: 100%;
}

.cate-content {
  display: flex;
  flex-direction: row;
  font-size: 16px;
  height: 100%;
}

.cate-left {
  flex-direction: column;
  display: flex;
  width: 200rpx;
  color: #444;
  height: 100%;
}

.cate-right {
  display: flex;
  flex-direction: column;
  width: 550rpx;
  background: #fff;
  padding: 20rpx 0rpx;
  height: 100%;
}

.type-nav {
  position: relative;
  padding: 0.7rem 0.3rem;
  text-align: center;
  border-bottom: 1px solid #f6f6f9;
  z-index: 10;
  background: #efeff4;
  border-right: 1px solid #f6f6f9;
  display: block;
}

.type-nav.selected {
  background: #fff;
  color: #fd4a5f;
  border-right: none;
}

.type-nav.selected:before {
  content: " ";
  position: absolute;
  display: block;
  width: 2px;
  height: 100%;
  background: #fd4a5f;
  top: 0;
  left: 0;
}

.cate-right-cont {
  width: 100%;
  display: flex;
  flex-flow: row wrap;
  align-content: flex-start;
}

.cate-right-cont-list {
  box-sizing: border-box;
  flex: 0 0 33.33%;
  padding: 20rpx 0;
}

.cate-right-cont-list .cate-img {
  height: 100rpx;
}

.cate-right-cont-list .cate-img image {
  width: 100%;
  height: 100%;
}

.cate-right-cont-list .cate-title {
  display: flex;
  justify-content: center;
  color: #444;
  padding: 10rpx 15rpx;
}
